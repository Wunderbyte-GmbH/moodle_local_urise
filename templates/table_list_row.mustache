{{!
    @template local_urise/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardbody": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardfooter": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardimage": [
            "value" : "value"
       ]
    }
}}

<div class="card listcard sk-fade mb-4 shadowcustom flex-md-row align-items-center row gx-0" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  <div class="content w-100">
    <div class="row optionrow foroptionid-{{#optionid}}{{#value}}{{.}}{{/value}}{{/optionid}}">
    {{#cardimage}}
        <div class="{{cardimageclass}} col-md-5 p0">
            {{#cardimage}}
                {{#value}}
                    <img class="img-fluid list-img" src="{{{value}}}">
                {{/value}}
                {{^value}}
                    <div class="placeholderimage">
                    <div class="m-3 d-flex justify-conten-center align-items-center flex-column">
                      <i class="fa-regular fa-image placeholdericon"></i>
                      <h4 class="pt-2" >
                        {{#str}} option_noimage, mod_booking {{/str}}
                      </h4>
                      </div>
                    </div>
                {{/value}}
            {{/cardimage}}
        </div>
    <div class="col-md-7">
    {{/cardimage}}
    <div class="mx-auto w-100 h-100 d-flex flex-column">
        <div class="row w-100">
        <div class="col-md-12 toprow d-flex">
            {{#top}}
                {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
                <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassbefore}}
                        <i class="{{.}}" aria-hidden="true"></i>
                    {{/columniclassbefore}}
                </span>
                {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                    {{{key}}}
                {{/keystring}}
                {{#keystring}}
                    {{.}}
                {{/keystring}}:
                {{#columnkeyclass}}</span>{{/columnkeyclass}}
                <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                    {{{value}}}
                </span>
                        {{#columnvalueclass}}</span>{{/columnvalueclass}}
                <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassafter}}
                        <i class="value {{.}}" aria-hidden="true"></i>
                    {{/columniclassafter}}
                </span>
                {{#columnclass}}</div>{{/columnclass}}
            {{/top}}
            </div>
        </div>
        <div class="d-flex flex-column p-0 mt-1 pr-3">
          {{#leftside}}
            {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/leftside}}
          <div class="">
              <ul class="nav mb-2 mt-2 d-flex align-items-center">
              {{#info}}
                <span {{^value}} style="display:none" {{/value}}>
                  <li class="nav-item pr-3 {{#columnclass}}{{.}} {{key}}{{/columnclass}}">
                    <div class="d-flex align-items-center" {{#columnalt}}title="{{.}}"{{/columnalt}}>
                      <div class=" {{#columnclassinner}}{{.}}{{/columnclassinner}} mr-2 d-flex text-dark font-size-m icon-uxs align-middle">
                        {{#columniclassbefore}}
                            <i class="{{.}}  mt-auto mb-auto mr-1 fa-fw" aria-hidden="true" aria-label="
                              {{^keystring}}
                                {{{key}}}
                            {{/keystring}}
                                {{#keystring}}
                                    {{.}}
                                {{/keystring}}"></i>
                        {{/columniclassbefore}}
                        {{{value}}}
                        {{#columniclassafter}}
                            <i class="value {{.}}" aria-hidden="true"></i>
                        {{/columniclassafter}}
                      </div>
                    </div>
                  </li>
                </span>
              {{/info}}
              </ul>
          </div>
          <div class="">
              <ul class="nav mb-2 mt-2">
              {{#footer}}
                <span {{^value}} style="display:none" {{/value}}>
                  <li class="nav-item pr-3">
                    <div class="d-flex align-items-center" {{#columnalt}}title="{{.}}"{{/columnalt}}>
                      <div class="mr-2 d-flex text-dark font-size-m icon-uxs align-middle">
                        {{#columniclassbefore}}
                            <i class="{{.}}  mt-auto mb-auto mr-1 fa-fw" aria-hidden="true" aria-label="
                              {{^keystring}}
                                {{{key}}}
                            {{/keystring}}
                                {{#keystring}}
                                    {{.}}
                                {{/keystring}}"></i>
                        {{/columniclassbefore}}
                        {{{value}}}
                        {{#columniclassafter}}
                            <i class="value {{.}}" aria-hidden="true"></i>
                        {{/columniclassafter}}
                      </div>
                    </div>
                  </li>
                </span>
              {{/footer}}
              </ul>
          </div>
        </div>
        <div class="row mt-auto row mt-auto mr-0 ml-0 mb-3">
        <div class="col-md-12 row">
               {{#rightside}}
          {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassbefore}}
              <i class="{{.}}" aria-hidden="true"></i>
            {{/columniclassbefore}}
            </span>
            <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
              {{{value}}}
            </span>
            {{#columnvalueclass}}</span>{{/columnvalueclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassafter}}
              <i class="value {{.}}" aria-hidden="true"></i>
            {{/columniclassafter}}
            </span>
          {{#columnclass}}</div>{{/columnclass}}
        {{/rightside}}
        </div>
        </div>
        </div>
      </div>
    </div>
    {{#cardimage}}
    </div>
    {{/cardimage}}
    </div>
  </div>
</div>
{{#js}}
{{^norecords}}
  require(['local_urise/easyavailabilitymodal'], function(fn) {
    fn.init(
      '{{#optionid}}{{#value}}{{{value}}}{{/value}}{{/optionid}}',
      'a.editavailability[data-optionid="{{#optionid}}{{#value}}{{{.}}}{{/value}}{{/optionid}}"]',
      '{{#str}} editavailabilityanddescription, local_urise {{/str}}',
    );
  });
{{/norecords}}
{{/js}}
